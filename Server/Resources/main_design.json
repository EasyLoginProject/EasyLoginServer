{
  "id": "_design/main_design",
  "views": {
    "all_users": {
      "map" : "function(doc) { if (doc.type === 'user') { emit([doc.numericID, doc._id], {\"uuid\":doc._id, \"numericID\":doc.numericID, \"shortname\":doc.shortname}); } }"
    },
    "user_authMethods_by_shortname": {
      "map" : "function(doc) { if (doc.type === 'user') { emit(doc.shortname, doc.authMethods); } }"
    },
    "all_devices": {
      "map" : "function(doc) { if (doc.type === 'device') { emit(doc._id, {\"uuid\":doc._id, \"serialNumber\":doc.serialNumber, \"deviceName\":doc.deviceName, \"hardwareUUID\":doc.hardwareUUID}); } }"
    },
    "users_numeric_id": {
      "map" : "function(doc) { if (doc.type === 'user') { emit(null, doc.numericID); } }",
      "reduce" : "_stats"
    },
      "all_munki_items": {
          "map" : "function(doc) {if (doc.type === 'munki_item') {emit(doc._id, {\"path\": doc._id, \"name\": doc.name, \"display_name\":doc.display_name, \"version\": doc.version});}}",
      },
      "all_munki_catalogs": {
          "map" : "function(doc) { if (doc.type === 'munki_item' && Array.isArray(doc.catalogs)) { doc.catalogs.forEach( function (catalog) { emit(\"catalog\", catalog); }) } }",
          "reduce" : "function (keys, values, rereduce) {return values.filter(function(item, pos){ return values.indexOf(item) == pos;});}"
      },
  },
  "language": "javascript"
}
